html
	head
		title
		include ../partials/dependencies
		link(href='http://fonts.googleapis.com/css?family=Ubuntu', rel='stylesheet', type='text/css')
		link(rel="stylesheet", href="css/app.css")
	body
		#header
			.container
				.logo-medium
					img(src="img/logo.png")
				.login
					span Login
					span Create Account
		#navigation
			.container
				ul.horizontal
					each link, name in {"home": "/", "connections": "/#/connections", "profile": "/#/profile", "discuss": "/#/discuss", "collaborate": "/#/collaborate"}
						li
							a(href=link)=name
		#body.container
			block main
		block footer_files
